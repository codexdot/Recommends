modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "gfortran", "glibcLocales", "libxcrypt", "llvmPackages.openmp", "pkg-config", "xsimd", "glibc", "gcc-unwrapped", "libgcc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export OMP_NUM_THREADS=1 && export OPENBLAS_NUM_THREADS=1 && export MKL_NUM_THREADS=1 && streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
